<div id="gtranslate_wrapper" style="display:none;position:fixed;top:0;right:8%;z-index:9999999999;">
<!-- GTranslate Language Switcher -->
<style type="text/css">
.switcher {
  font-family: Arial;
  font-size: 10pt;
  text-align: left;
  cursor: pointer;
  overflow: hidden;
  width: 163px;
  line-height: 17px;
}
.switcher a {
  text-decoration: none;
  display: block;
  font-size: 10pt;
  -webkit---bxs: content-box;
  -moz---bxs: content-box;
  --bxs: content-box;
}
.switcher a img {
  vertical-align: middle;
  display: inline;
  border: 0;
  padding: 0;
  margin: 0;
  opacity: 0.8;
}
.switcher a:hover img {
  opacity: 1;
}
.switcher .selected {
  background: #FFFFFF url("https://gtranslate.io/shopify/assets/switcher.png") repeat-x;
  position: relative;
  z-index: 9999;
}
.switcher .selected a {
  border: 1px solid #CCCCCC;
  background: url("https://gtranslate.io/shopify/assets/arrow_down.png") 146px center no-repeat;
  color: #666666;
  padding: 3px 5px;
  width: 151px;
}
.switcher .selected a.open {
  background-image: url("https://gtranslate.io/shopify/assets/arrow_up.png");
}
.switcher .selected a:hover {
  background: #F0F0F0 url("https://gtranslate.io/shopify/assets/arrow_down.png") 146px center no-repeat;
}
.switcher .option {
  position: relative;
  z-index: 9998;
  border-left: 1px solid #CCCCCC;
  border-right: 1px solid #CCCCCC;
  border-bottom: 1px solid #CCCCCC;
  --bgc: #EEEEEE;
  display: none;
  width: 161px;
  max-height: 198px;
  -webkit---bxs: content-box;
  -moz---bxs: content-box;
  --bxs: content-box;
  overflow-y: auto;
  overflow-x: hidden;
}
.switcher .option a {
  color: #000;
  padding: 3px 5px;
}
.switcher .option a:hover {
  background: #FFC;
}
.switcher .option a.selected {
  background: #FFC;
}
#selected_lang_name {
  float: none;
}
.l_name {
  float: none !important;
  margin: 0;
}
.switcher .option::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 3px rgba(0,0,0,0.3);
  border-radius: 5px;
  --bgc: #F5F5F5;
}
.switcher .option::-webkit-scrollbar {
  width: 5px;
}
.switcher .option::-webkit-scrollbar-thumb {
  border-radius: 5px;
  -webkit-box-shadow: inset 0 0 3px rgba(0,0,0,.3);
  --bgc: #888;
}
</style>

<div class="switcher notranslate">
<div class="selected">
  <a href="#" onclick="return false;"><img alt="en" height="16" src="/imgs/en-ca.png" width="16"/> English</a>
</div>
<div class="option">
  <a class="nturl selected" href="/" onclick="doGTranslate('en|en');jQuery('div.switcher div.selected a').html(jQuery(this).html());return false;" title="English"><img alt="en" data-gt-lazy-src="//gtranslate.io/shopify/assets/flags/16/en-ca.png" height="16" width="16"/> English</a>
  <a class="nturl" href="https://fr.robotinacan.com" onclick="doGTranslate('en|fr');jQuery('div.switcher div.selected a').html(jQuery(this).html());return false;" title="Français"><img alt="en" data-gt-lazy-src="//gtranslate.io/shopify/assets/flags/16/fr-qc.png" height="16" width="16"/> Français</a>
</div>
</div>

<style type="text/css">
a.glink {
  text-decoration: none;
}
a.glink span {
  margin-right: 3px;
  font-size: 10px;
  vertical-align: middle;
}
a.glink img {
  vertical-align: middle;
  display: inline;
  border: 0;
  padding: 0;
  margin: 0;
  opacity: 0.8;
}
a.glink:hover img {
  opacity: 1;
}
</style>
</div>
